#include <stdio.h>
#include <stdlib.h>

char* fairRations(int* B, int N) {
    int count = 0;

    for (int i = 0; i < N - 1; i++) {
        if (B[i] % 2 != 0) {
            B[i]++;       // Give 1 loaf to current person
            B[i + 1]++;   // Give 1 loaf to next person
            count += 2;   // Count loaves distributed
        }
    }

    // Check if last person is even
    if (B[N - 1] % 2 != 0) {
        return "NO";
    }

    // Allocate memory for string result
    char* result = malloc(12);
    sprintf(result, "%d", count);
    return result;
}

int main() {
    int N;
    scanf("%d", &N);
    int B[N];
    for (int i = 0; i < N; i++) {
        scanf("%d", &B[i]);
    }

    char* result = fairRations(B, N);
    printf("%s\n", result);

    // Free allocated memory if not "NO"
    if (result != "NO") free(result);

    return 0;
}
