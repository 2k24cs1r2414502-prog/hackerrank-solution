#include <stdio.h>
#include <math.h>

long strangeCounter(long t) {
    long k = (long)(log2((t + 2) / 3.0));
    long cycle_start = 3 * ((1L << k) - 1);
    long cycle_length = 3 * (1L << k);
    return cycle_length - (t - cycle_start) + 1;
}

int main() {
    long t;
    scanf("%ld", &t);
    printf("%ld\n", strangeCounter(t));
    return 0;
}
